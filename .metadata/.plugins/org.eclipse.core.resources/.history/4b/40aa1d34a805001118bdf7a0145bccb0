package strings;

import java.util.Scanner;

public class EjercicioString5 {	
	
	public static boolean esVocal (char c) {
		if (c=='a' || c=='e' || c=='i' || c=='o' || c=='u' ||
			c=='A' || c=='E' || c=='I' || c=='O' || c=='U') {
				return true;
		}
		return false;
	}
	
	public static boolean esConsonante (char c) {
		if (esVocal(c)) {
			return false;
		}
		
		if (c>='B' && c<='Z')
			return true;
		if (c>='b' && c<='z')
			return true;
		
		return false;
	}

	public static void main(String[] args) {
		// Pedimos una cadena al usuario
		Scanner sc = new Scanner(System.in);
		System.out.print("Introduce la cadena: ");
		String cad = sc.nextLine();
		sc.close();
		
		// Contamos cuantas vocales, consonantes y espacios tiene la cadena
		int vocales=0;
		int consonantes=0;
		int espacios=0;
		
		for (int i=0; i<cad.length(); i++) {
			if (esVocal(cad.charAt(i))) {
				vocales++;
			} else if (cad.charAt(i)==' ') {
				espacios++;
			} else if (esConsonante(cad.charAt(i))) {
				consonantes++;
			}
		}
		System.out.println("Total vocales: "+vocales);
		System.out.println("Total consonantes: "+consonantes);
		System.out.println("Total de espacios: "+espacios);

	}

}
