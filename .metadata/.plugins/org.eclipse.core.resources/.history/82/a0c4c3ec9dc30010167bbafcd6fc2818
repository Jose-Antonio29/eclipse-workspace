package boletin;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Ejer2 {

	public static int compa (int n1, int n2, int n3, int n4) {
		int max=0;
		if (n1>n2) {
			if (n1>n3) {
				if (n1>n4) {
					max=n1;
				} else
					max=n4;
			} else
				if (n3>n4) {
					max=n3;
				} else
					max=n4;
		} else {
			if (n2>n3) {
				if (n2>n4) {
					max=n2;
				} else
					if (n3>n4) {
						max=n3;
					} else
						max=n4;
			}
			return max;
		}
	}

	public static void main(String[] args) {
		// Creamos el scanner
		Scanner sc = new Scanner(System.in);

		try {
			int n1,n2,n3,n4;
			// Pedimos cuatro números enteros
			System.out.print("Dime el primer número: ");
			n1 = sc.nextInt();

			System.out.print("Dime el segundo número: ");
			n2 = sc.nextInt();

			System.out.print("Dime el tercer número: ");
			n3 = sc.nextInt();

			System.out.print("Dime el cuarto número: ");
			n4 = sc.nextInt();

			System.out.println("> Mayor número introducido: "+compa(n1,n2,n3,n4));

		} catch (InputMismatchException e) {
			System.err.println("Tipo de valor incorrecto");
		}

		// Cerramos el scanner
		sc.close();

	}

}
