package strings;

import java.util.Scanner;

public class EjercicioString4 {

	public static void main(String[] args) {
		// Pedimos al usuario una cadena y una subcadena
		Scanner sc = new Scanner(System.in);
		System.out.print("Introduce una cadena: ");
		StringBuffer cad1 = new StringBuffer(sc.nextLine());
		System.out.print("Elige una palabra de tu cadena original: ");
		String cad2 = sc.nextLine();
		sc.close();
		
		// Comprobamos si la subcadena est√° en cad1 y modificamos el valor
		int inicio = cad1.indexOf(cad2);
		int fin = cad1.indexOf(cad2)+cad2.length();
		String cad2Mayus = cad2.toUpperCase();
		
		if (cad1.indexOf(cad2)!=-1) {
			System.out.println(cad1.replace(inicio,fin,cad2Mayus));
		} else {
			System.out.println(cad1);
		}
		

	}

}
