package repaso;

import java.util.Scanner;

public class Names {

	final static int TAM=5;  // Número de elementos del vector

	/**
	 * Procedimiento que imprime por pantalla los valores de un array de strings
	 * @param V (int[]) - Un array de strings
	 */
	private static void mostrarArray (String[] s) {
		for (int i=0; i<s.length; i++) {
			System.out.print(s[i]+" ");
		}
	}
	
	/**
	 * Procedimiento que ordena los Strings de un array por el método de la Burbuja
	 * @param V (String[]) - Un array de strings
	 */
	private static void ordenar (String[] s) {
		String aux;
		boolean cambio;
		for (int i=s.length-1; i>=0; i-- ) {
			cambio=false;
			for (int j=0; j<i; j++) {
				if (s[j].compareTo(s[j+1])>0) {
					aux = s[j+1];
					s[j+1] = s[j];
					s[j] = aux;
					cambio=true;
				}
			}
			if (!cambio) {
				return;
			}
		}
	}
	
	/**
	 * Devuelve el índice del String más largo almacenado en el array de Strings
	 * @param V (String[]) - Un array de strings
	 * @return El índice (int) del String más largo almacenado en el array de strings
	 */
	private static int Mayor (String[] s) {
		int result=0;
		for (int i=1; i<s.length; i++) {
			if (s[i].length()>s[result].length()) {
				result=i;
			}
		}
		return result;
	}
	
	/**
	 * Devuelve el índice del String más largo almacenado en el array de Strings
	 * @param V (String[]) - Un array de strings
	 * @return El índice (int) del String más largo almacenado en el array de strings
	 */
	private static int Menor (String[] s) {
		int result=0;
		for (int i=1; i<s.length; i++) {
			if (s[i].length()<s[result].length()) {
				result=i;
			}
		}
		return result;
	}


	// Programa principal
	public static void main(String[] args) {
		String[] A = new String[TAM];

		// Pedimos 5 nombres y los almacenamos en A
		Scanner sc = new Scanner(System.in);
		for (int i=0; i<A.length; i++) {
			System.out.print("["+(i+1)+"] Introduce un nombre: ");
			A[i]=sc.nextLine();
		}	
		sc.close();

		// Mostramos el array
		System.out.print("\nArray: ");
		mostrarArray(A);
		
		// Mostramos el array ordenado
		System.out.print("\nArray ordenado: ");
		ordenar(A);
		mostrarArray(A);
		
		// Mostramos el nombre más largo y el más corto
		System.out.println("\nEl nombre más largo es: "+A[Mayor(A)]);

	}

}
