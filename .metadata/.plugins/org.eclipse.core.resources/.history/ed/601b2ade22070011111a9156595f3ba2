package repaso;

import java.util.InputMismatchException;
import java.util.Scanner;

public class RepasoArray {

	final static int TAM=5;
	
	/**
	 * Procedimiento que imprime por pantalla los valores de un array de números enteros
	 * @param V (int[]) - Un array de números enteros
	 */
	private static void mostrarArray (int[] V) {
		for (int i=0; i<V.length; i++) {
			System.out.print(V[i]+" ");
		}
	}
	
	private static void bubblesort (int[] V) {
		int aux;
		boolean cambio;
		for (int i=V.length; i>=0; i-- ) {
			cambio=false;
			for (int j=0; j<i; j++) {
				if (V[j]>V[j+1]) {
					aux = V[j+1];
					V[j+1] = V[j];
					V[j] = aux;
					cambio=true;
				}
			}
			if (!cambio) {
				return;
			}
		}
	}
	
	/**
	 * Devuelve el mayor valor hayada en un array de números enteros
	 * @param V (int[]) - Un array de números enteros
	 * @return El mayor número del array
	 */
	private static int Mayor (int[] V) {
		int max=V[0];
		for (int i=1; i<V.length; i++) {
			if (V[i]>max) {
				max=V[i];
			}
		}
		return max;
	}
	
	/**
	 * Devuelve el menor valor hayada en un array de números enteros
	 * @param V (int[]) - Un array de números enteros
	 * @return El menor número del array
	 */
	private static int Menor (int[] V) {
		int min=V[0];
		for (int i=1; i<V.length; i++) {
			if (V[i]<min) {
				min=V[i];
			}
		}
		return min;
	}
	
	/**
	 * Devuelve la media de los valores almacenados en un array de números enteros
	 * @param V (int[]) - Un array de números enteros
	 * @return La media de los valores del array
	 */
	private static double Media (int[] V) {
		double suma=V[0];
		for (int i=1; i<V.length; i++) {
			suma+=V[i];
		}
		return suma/V.length;
	}
	
	public static void main(String[] args) {
		int[] A = new int[TAM];
		
		// Pedimos 5 números y los almacenamos en A
		Scanner sc = new Scanner(System.in);
		System.out.println("Introduce 5 números:");
		try {
			for (int i=0; i<A.length; i++) {
				System.out.print("Valor ["+(i+1)+"]: ");
				A[i]=sc.nextInt();
			}	
		} catch (InputMismatchException ime) {
			System.err.println(">> ERROR: El tipo de datos introducido no es correcto.");
		} finally {
			sc.close();
		}
		
		// Mostramos el array
		System.out.print("\nValores del vector: ");
		mostrarArray(A);
		
		// Mostramos el mayor valor
		System.out.println("\nMayor valor: "+Mayor(A));
		
		// Mostramos el menor valor 
		System.out.println("Menor valor: "+Menor(A));
		
		// Mostramos la media de los valores
		System.out.println("Media de los valores: "+Media(A));
	}

}
